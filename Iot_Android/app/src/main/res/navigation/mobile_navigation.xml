<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.iot_android.view.fragment.MainPageFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_mainpage" />

    <fragment
        android:id="@+id/navigation_weather"
        android:name="com.example.iot_android.view.fragment.WeatherFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather"/>

    <fragment
        android:id="@+id/navigation_manage"
        android:name="com.example.iot_android.view.fragment.ManageFragment"
        android:label="Manage"
        tools:layout="@layout/fragment_manage" />

    <fragment
        android:id="@+id/navigation_mypage"
        android:name="com.example.iot_android.view.fragment.MyPageFragment"
        android:label="Mypage"
        tools:layout="@layout/fragment_mypage" />
</navigation>